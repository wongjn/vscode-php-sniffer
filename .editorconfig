root = true

# All files.
[*]
end_of_line = LF
indent_style = space
indent_size = 2
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[package{-lock,}.json]
indent_size = 4

[**/.vscode/*.json]
indent_size = 4

# Avoid interfering with tests.
[**/test/fixtures/**/*.php]
indent_style = unset
indent_size = unset
